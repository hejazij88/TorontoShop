@model TorontoShop.Domain.ViewModel.Admin.Product.ProductCategoryFilterViewModel

@if (Model.Categories != null && Model.Categories.Any())
{

    <div class="cat-blocks-container">
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-6 col-sm-4 col-lg-2">
                    <a  asp-area="" asp-controller="Product" asp-action="Products" asp-route-FilterByCategory="@category.UrlName" class="cat-block">
                        <figure>
                            <span>
                                <img src="@(PathExtensions.CategoryOrigin +category.ImageName)" alt="@category.Title">
                            </span>
                        </figure>

                        <h3 class="cat-block-title">@category.Title</h3><!-- End .cat-block-title -->
                    </a>
                </div>

            }

        </div>
    </div>
}